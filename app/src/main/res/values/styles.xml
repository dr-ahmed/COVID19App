<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_gradient</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="CustomProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/progressDialogBackgroundColor</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="CustomDatPickerStyle" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/primaryBrown</item>
        <item name="colorControlActivated">@color/primaryBrown</item>
        <item name="colorControlHighlight">@color/primaryBrown</item>
    </style>

</resources>
